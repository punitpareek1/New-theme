<section class="research-publications">
<div class="global-container-1200 ">


<h1 class="topheading"> {{ section.settings.Main_Heading}} </h1>

<div class="main-research-publications-row"> 
    {% assign block01 = section.blocks | where: 'type', 'order' %}
{% for block in block01 %}
	<div class="research-publications-group">  
      <div class="btn_group">
<div class="pdf-link-grp"><a href="{{ block.settings.link_pdf }}" target="_blank" rel="noopener" class="link-standard"><i class="fa fa-file-pdf-o" aria-hidden="true"></i>{{ block.settings.link_text }}</a></div>
<div class="flip" data-tab-id={{ block.id }}> <span class="flipIcon">+</span> <span class="flipCont">Show Abstract</span></div>
</div>
           
      <h3 class="heading-papers"><a href="{{ block.settings.link_pdf }}" target="_blank" rel="noopener">{{ block.settings.scientific_papers}}</a></h3>
      <div class="text02 panel" data-tab-id={{ block.id }}> {{ block.settings.paragraph }} <a class="read_more_res" href="{{block.settings.link_pdf   }}" target="_blank">Read More</a> </div>  
      <div class="date_publication"> {{ block.settings.paragraph2 }} </div>
       {% assign tagsri = block.settings.title2 | split: ", " %}
    <div class="tag_wapper"> 
{% for tagblok in tagsri %}
<span>  {{ tagblok }} </span>

{% endfor %}
</div>
     </div>

{% endfor %}


