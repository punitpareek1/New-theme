    border: 0;
    margin-bottom: 8px;
    padding: .66667rem 1rem;
    font-size: 1rem;
    line-height: 1.7;
    border-radius: 3px;
    color: #fff;
    font-weight: 500;
    text-transform: uppercase;
  }
  .hs-form .hs-button {
    margin-top: 20px;
}
  .hs-error-msg{
      font-size: 1rem;
    line-height: 1.7;
    color: #5e5e5e;
    font-weight: 100;
  }
  .mailing-list-signup{
  padding:60px 0px;
  }
  .template-social{
  background-color:#edeff2;
  }
  @media(max-width:768px){
  .mailing-list-signup {
    padding: 30px 5%;
}
  
  }
</style>


