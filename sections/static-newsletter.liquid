    color: #FF5C35;
}
  h2, h2 a {
    font-size: 2rem;
    line-height: 1.15;
    font-weight: 500;
    color: #404040;
}
  .module-header{
  padding-bottom:20px;
  }
  .template-newsletter .hs-form .hs_email {
    min-width: 300px;
}
  .hs-form .hs_email {
    text-align: left;
    font-size: .9rem;
}
