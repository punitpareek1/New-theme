<style>
  .topSectionOuter{
    background-image: url({{ section.settings.backgroundImage | img_url: 'master'}});
    padding: 85px 20px 136px;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: 100% 100%;
    background-position: 100% calc(100%);
  }
  .topSectionInner {
    max-width: 1200px;
    margin: auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
}

.text_above_headline {
    font-family: 'sk-modernist';
    font-weight: 500;
    color: #fff;
    font-size: 40px;
    line-height: 1.3;
}  
  
.topSectionInner .headline {
    font-family: 'sk-modernist';
    font-weight: 500;
    color: #fff;
    font-size: 72px;
    line-height: 1.3;
    letter-spacing: 0.1rem;
}
h2.subheadline {
    font-size:32px;
    color: white;
}
.topSectionInner .btn {
    background-color: #fff;
    border: none;
    padding: 22px 63px;
    border-radius: 45px;
    font-family: 'sk-modernist';
    font-weight: 500;
    line-height: 1;
    letter-spacing: 1px;
    font-size: 28px;
}
  
  
.topSectionInner .btn i {
    font-size: 23px;
    font-weight: inherit;
    color: inherit;
}

  
@media(max-width:768px){
  .text_above_headline {
    font-size:16px;
  }
  
  .topSectionInner .headline {
    font-size: 34px;
  }
  
  h2.subheadline {
      font-size:18px;
  }
  .topSectionInner .rightSection {
    display: none;
  }

  .topSectionInner {
    display: block;
  }

  .topSectionInner .btn {
     font-size: 14px;
    padding: 10px 27px 12px;
  }

  .topSectionInner .btn i {
    font-size: 14px;
  }

  .topSectionOuter {
    padding: 40px 20px 80px;
    background-position: 50% calc(82%);
}

}  
  
  
</style>  

<div class="topSectionOuter">
  <div class="topSectionInner">
    <div class="leftSection">
        <span class="text_above_headline">{{ section.settings.top_sub_headline }}</span>
    	<h1 class="headline">{{ section.settings.headline }}</h1>
        <h2 class="subheadline"> {{ section.settings.subheadline }} </h2>
<!--     	<button class="btn">{{ section.settings.buttonText }} <i class="fa fa-arrow-right" aria-hidden="true"></i></button> -->
    </div>
    <div class="rightSection">
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Flore Clinical",
    "settings": [
    {
      "type": "text",
      "id": "top_sub_headline",
      "placeholder": "Enter Text Above Headline",
	  "label": "Text Above Headline"
    },
    {
      "type": "text",
      "id": "headline",
      "placeholder": "Enter Headline",
	  "label": "Headline"
    },
       {
      "type": "text",
      "id": "subheadline",
      "placeholder": "Enter Headline",
	  "label": "Sub Heading"
    }, 
   
    {
      "type": "image_picker",
      "id": "backgroundImage",
	  "label": "Background Image"
    }
  ],
	"presets": [
        {
        "name": "Flore Clinical"
       }
       ]
  }
{% endschema %}
