  <div class="image-post"><img src="https://cdn.shopify.com/s/files/1/2204/9357/files/Sun_Genomics-1438_1_1_1.png?v=1649306666"></div>
  <div class="how-row">
  
    <div class="how-inner-row">
      {% if section.settings.heading != blank %}
      <h4 class="how-heading">{{section.settings.heading}}</h4>
      {% endif %}
      
      {% if section.settings.description != blank %}
      <div class="how-description">{{section.settings.description}}</div>
      {% endif %}
      {% if section.settings.image != blank %}
      <div class="how-image"><img src="{{section.settings.image | img_url: 'master' }}"></div>
      {% endif %}
      <div class="how-to-mob">
		   <img class="month-cycle-img" src="{{section.settings.mob-image | img_url: 'master' }}"> 		
            {% for block in section.blocks %}
        		<h6>{{block.settings.heading}}</h6>
        		<div class="content step-num-{{ forloop.index }}">
				  <div class="content-area">	
                  {{block.settings.content}}
                  </div>
                  {% if block.settings.right-image != blank %}
					<img class="step-image-{{ forloop.index }}" src="{{ block.settings.right-image | img_url: 'master' }}">
                  {% endif %}
                  <div class="content-area-two">	
                  {{block.settings.content-two}}
                  </div>
        		</div>
					
          	{% endfor %}	
        
      </div>  
    </div>
  
  </div>


</section>








