<style>

  .lp-how-works{
  padding:120px 0 140px;
    position: relative;
  }
  .image-post{
      max-width: 700px;
    position: absolute;
    right: 0;
    top: -40px;
    z-index : 0;
  }
  
  .image-post img {
  width:100%;
  }
  
  .how-inner-row{
  display:grid;
   grid-template-columns: repeat(2 , 1fr);
    grid-template-rows : 1fr;
  }
  
  .how-inner-row{
      max-width: 1200px;
    margin: 0 auto;
  }

  .how-image{
  grid-column : 1/span 2;
    margin-top:30px;
  }
  .how-heading{
      grid-column: 1/span 2;
  font-size: 42px;
    color: #231f20;
    font-weight: 700;
    font-family: 'sk-modernist';
  }
  
  .how-description p{
  font-family: SunGenomics,sans-serif;
    font-size: 26px;
    line-height: 1.6;
    color: #000;
    font-weight: 400;
  
  }
  
  .how-row{
      position: relative;
  }
  
  .how-description strong {
  font-weight:700;
  }
  
  .lp-how-works .waves3 {
  position: absolute;
    z-index: 9;
    transform: rotate(180deg);
    top: -4px;
    left: 0; 
    width:100%;
  }
  .waves3 img {
    width: 100%;
	}
  .how-to-mob{
    	display:none;
    }
  
  .waves-svg-bottom svg{
  position: absolute;
    top: -1px;
    transform: scaleY(-1);
    z-index: 2;
  }
  
    @media(max-width:1200px){
  
    .lp-how-works {
    padding: 60px 12px;
    position: relative;
	}
    .how-heading {
    grid-column: 1/span 2;
    font-size: 42px;
    z-index: 9;
}
  
      
  }
  
  @media(max-width:1024px){
  
    .how-description{
        grid-column: 1/span 2;
    }
    .image-post {
    max-width: 500px;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 0;
}
          .get-heading {
      font-size: 38px;
      line-height: 40px;
    }
    
    .how-description{
    
        grid-column: 1/span 2;
    z-index: 11;
    }
    
    .image-post {
    max-width: 300px;
    position: absolute;
    right: 0;
    top: 0;
      display:none;
}
    .lp-how-works .waves3 {
    position: absolute;
    z-index: 9;
    transform: rotate(180deg);
    top: -14px;
    left: 0;
}
    
  }
  
  
  @media(max-width:768px){
  
    .how-description p{
    	font-size: 18px;
    	text-align: center;
    }
    .how-heading {
    	font-size: 32px;
    	text-align: center;
	}
    .how-image{
    	display:none;
    }
    .how-to-mob{
    	display:block;
      	grid-column: 1 / span 2;
    }
    .month-cycle-img {
        margin: auto;
        display: block;
        width: 180px;
      	margin-bottom: 50px;
	}
    .how-to-mob h6 {
        font-size: 28px;
        font-family: 'SunGenomics';
        color: #1d6667;
        font-weight: 500;
	}	
    p.month {padding: 0px;font-family: 'SunGenomics';color: #000;margin-bottom: 5px;}

    p.month span {color: #1d6667;font-weight: 700;}

    .content ul {margin: 0px; margin-left : 4px;}

    .content ul li {margin: 0px;color: #000;line-height: 1.0;margin-left: 19px;
        list-style-type: disc;}

    .content ul li::marker {font-size: 22px;}
    
    .content.step-num-1 {display: grid;grid-template-columns: 1.5fr 1fr;}

    .content-area-two {margin-top: 20px;grid-column: 1 /  span 2;}

    span.yellow-span {color: #FF5C35;font-weight: 700;}
    
    .how-to-mob .content {
   	 	margin-bottom: 30px;
	}
    
    .content.step-num-2 {
    	display: grid;
    	grid-template-columns: 1.5fr 1fr;
	}
    .content.step-num-4 {
    	margin-bottom: 0px;
	}
    .lp-how-works {
    padding: 60px 12px 0px;
	}
    
    .waves-svg-bottom svg{
        margin-left: -13px;
    }
    
  }
  
</style>



