<style>
  .home-successstories{
  	background-color:#f8f8f8;
  }
  .np-slideshow{
      padding-top:80px;
      padding-bottom:80px;
      display: flex;
      column-gap: 30px;
  }
  .np-slideshow-slide{width: 50%;}
  
  @media(max-width:768px){
    .np-slideshow{display:block;}
    .np-slideshow-slide{width: 100%;margin-bottom:20px;}
    
  }
</style>
<div class="home-successstories">
<div class="contain-1200 global-container-1200">
<div class="np-slideshow" style="text-align: center;">
  
  {% for block in section.blocks %}
  
		<div class="np-slideshow-slide" style="display: block;">
				<div class="col-grid">
				<div class="col-12 home-successstories-main padding-t-70" style="position: relative;">
				<div class="home-successstories-quoteicon hide-lessthan-900"><img src="https://cdn.shopify.com/s/files/1/2204/9357/t/10/assets/testimonial-quote-icon-orange.png" style="width: 40px;"></div>
				<div style="max-width: 650px; margin: 0 auto; text-align: center;">
				<p class="quote">"{{block.settings.quotes}}"</p>
				<div class="testimonial-source">
				<br>
				<div style="vertical-align: middle;"><img src="{{block.settings.Cimage | img_url: 'master'}}" style="width: 60px; height: 60px; border-radius: 50%;"></div>
				<div style="vertical-align: middle; padding-left: 10px;">
				<div class="testimonial-name" style="padding-top: 5px;">{{block.settings.clientName}}</div>
				<div class="testimonial-title" style="margin-top: -5px;"><small>{{block.settings.clientTitle}}</small></div>
				</div>
				</div>
				</div>
				</div>
				<div class="clear"></div>
				</div>
		</div>
  
  	{% endfor %}
  
</div>
</div>
</div>

{% schema %}
  {
    "name": "Slide",
    "settings": [],
	"blocks":[
	{
        "type": "text",
         "name": "Client Review",
		"settings": [
			{
              "type":"text",
              "id":"clientName",
              "label":"Client Name"
            },
              {
                  "type":"text",
                  "id":"clientTitle",
                  "label":"Client Title"
              },
            {
                "type":"text",
                "id":"quotes",
                "label":"Client Quote"
            },
            {
                "type":"image_picker",
                "id":"Cimage",
                "label":"Client Image"
            }
		]
		
	}
	],
  "presets": [
    {
      "category": "Advanced content",
      "name": "Slide",
      "settings": {}
    }
  ]
  }
{% endschema %}

