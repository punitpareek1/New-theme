         	{% if block.settings.left_image != blank %}
           <div class="img-heigth">
          			<img class="lazy" src="{{block.settings.left_image | img_url: '80x'}}" alt="{{ block.settings.image_alt }}">
           </div>
           {%endif %}
           <div class="text-body">
