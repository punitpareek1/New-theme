<style>
#section-{{ section.id }}{
background: url({{Section.settings.bg-image | img_url: 'master'}});
background: {{section.settings.color}};
}
  .sign_join_inner{
    max-width: 1260px;
    margin: 0 auto;
  
}
  #sign_join_inner-{{ section.id }}{
      padding: {{section.settings.padding_topp}}px 30px 50px 30px;
}
  .sign_join_col{
   text-align: center;
   }
.sign_join_col h3{
   font-size: 42px;
   font-family: inherit;
   font-weight: 500;
   line-height: 1.1;
  
  }
 #pad-{{ section.id }}{
padding-bottom: {{section.settings.padding_bottom}}px;
  }
.sign_join_col p{
   font-size: 26px;
      padding-bottom: 45px;
  }
.sign_join_col1 a{
      background: #FF5C35;
    border-radius: 50px;
    padding: 14px 35px;
    line-height: 1;
    color: #FFF;
    font-weight: 600;
    gap: 13px;
    display: flex;
    justify-content: center;
    align-items: center;
}
