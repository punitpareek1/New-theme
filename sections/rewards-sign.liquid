  .sign_join_col1{
display: flex;
    justify-content: center;
    align-items: center;
    gap: 50px;
}

  @media(max-width: 768px){
.sign_join_col1 {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
}
  .sign_join_col h3 {
    font-size: 26px;
}
  .sign_join_col p {
    font-size: 18px;
}
}
</style>

    <div class="sign_join_wapper" id="section-{{ section.id }}">
        <div class="sign_join_inner" id="sign_join_inner-{{ section.id }}">
            <div class="sign_join_col" id="pad-{{ section.id }}">
              {% if section.settings.heading != blank %}
                <h3>{{section.settings.heading}}</h3>
                {% endif %}
                    {% if section.settings.sub-heding != blank %}
                <p>{{section.settings.sub-heding}}</p>
                     {% endif %}
            </div>
            <div class="sign_join_col1">
                       {% if section.settings.url != blank %}
                <a href="{{section.settings.url}}">
                           {% endif %}
                    {{section.settings.bnt-text}}<i class="fa fa-arrow-right" aria-hidden="true"></i>
                </a>
                   {% if section.settings.url1 != blank %}
                <a href="{{section.settings.url1}}">
                            {% endif %}
                    {{section.settings.bnt-text1}}<i class="fa fa-arrow-right" aria-hidden="true"></i>
                </a>

            </div>
        </div>
    </div>


{% schema %}
{
  "name": "sign",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg-image", 
     "label": "Background"
    },
    {
      "type": "color",
      "id": "color",
     "label": "color",
     "default": "#FFF"
    },
    {
      "type": "text",
      "id": "heading",
     "label": "Heading"
    },
    {
      "type": "text",
      "id": "sub-heding" ,
     "label": "Sub Heading"
    },
    {
      "type": "url",
      "id": "url",
       "label": "Link"
    },
    {
      "type": "text",
      "id": "bnt-text",
     "label": "text"
    },
    {
      "type": "url",
      "id": "url1",
       "label": "Link"
    },
    {
      "type": "text",
      "id": "bnt-text1",
     "label": "text"
    },
      {
  "type": "range",
  "id": "padding_bottom",
  "min": 0,
  "max":100,
  "step": 1,
  "unit": "px",
  "label": "Padding Bottom",
  "default": 45
},
{
  "type": "range",
  "id": "padding_topp",
  "min": 0,
  "max":100,
  "step": 1,
  "unit": "px",
  "label": "Padding Top",
  "default": 45
}
  ],
   "presets": [
    {
      "category": "Advanced content",
      "name": "Sign Reward",
      "settings": {}
    }
  ]
}
{% endschema %}
    


