<script
  type="application/json"
  data-section-id="{{ section.id }}"
  data-section-type="dynamic-alternating-content">
></script>
<style>
  .home-chart{
  	padding: 0;
    background: #f8f8f8;
    position: relative;
    z-index: 1;
    padding-bottom:45px;
  }
  .home-chart ul {
        list-style-type: disc;
}
  .padding-b-50 {
    padding-top:25px;
}
  .image-div{padding-top:45px;padding-bottom:45px;}
  .home-chart ul li{list-style-position: inside;}
  strong {
        font-weight: 700;
}
  .chart-txt-heading{padding-bottom:0px;max-width:100%;}
  .chart-contain-1200{
    display: flex;
    width:100%;
    padding-top:75px;
    
  }
  .chart-col-2{
     width: 50%;
     box-sizing: border-box;
    float: left;
            justify-content: flex-end;
        align-items: flex-end;
        display: flex;
  }
  .add-to-cart{cursor:pointer;}
  .chart-col-2{padding-top:60px;}
  
  .chart-col-1 h4{
    line-height: 1.25;
        font-size: 1.2rem;
        font-weight: 500;
        color: #404040;
  }
  .chart-col-1 .pretitle{
  	color: #FF5C35;
    font-weight: 500;
    padding-bottom: 8px;
    font-size: .9rem;
    line-height: 1.4;
  }
  .home-chart .text02 h3{
  	line-height: 1.25;
        font-size: 1.2rem;
        font-weight: 500;
        color: #404040;
  }
  @media(max-width:768px)
  {
  	
    .chart-contain-1200 {
    	display:block!important;
    }
  }
 
  
</style>

<div class="home-chart">
  <div class="chart-contain-1200 global-container-1200">
     
		 <div class="chart-col-1">
           <div class="pretitle">{{section.settings.pretitle}}</div>
           	<h2 class="chart-txt-heading headingH2">
                      {{section.settings.heading}}
            </h2>
           
           <div class="text02">{{section.settings.paragraph1}}</div>
           <div style="text-align:center;padding-top:30px;padding-bottom:20px;"><a href="/products/microbiome-collection-kit" class="btn btn-primary">Test my gut</a></div>
           <div class="image-div" style="text-align:center"><img src="{{section.settings.image | img_url: 'master'}}"></div>
           <div class="text02">{{section.settings.paragraph2}}</div>
           
          </div>

    
  </div>
</div>

{% schema %}
{
  "name": "Bristol Stool Chart",
  "settings": [
   
	{
      "type": "text",
      "id": "pretitle",
      "label": "Pretitle"
    },
	
	{
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
	{
      "type": "html",
      "id": "paragraph1",
      "label": "Paragraph"
    },
	{
       "type": "image_picker",
       "id": "image",
       "label": "Image"
    },
	{
      "type": "html",
      "id": "paragraph2",
      "label": "Paragraph 2"
    }
    
    
   
  ]
}

{% endschema %}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
