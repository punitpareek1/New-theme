      {
      "type": "text",
      "id": "text2",
      "label": "Text 2"
      },

      {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
      },
      {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default":"Get Started"
      },
      {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"

      }
      ],
      "presets": [
      {
      "category": "Advanced content",
      "name": "Section Giving Back",
      "settings": {}
      }
     ]
}

{% endschema %}

