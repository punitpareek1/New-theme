            <img class="lazyload" fetchpriority="high" width="480" height="305" data-src="{{section.settings.product_image | img_url: '880x' }}"  src="{{ section.settings.product_image |  img_url: '20x' }}" alt="FlorÃ©">
  {% endif %}
        </div>
    </div>
    </div>
<div class="newsImage">
<img class="white" src="https://cdn.shopify.com/s/files/1/2204/9357/files/FeatureIn_white.jpg?v=1660061945" width="100%" height="100%" alt="FeatureIn" loading="lazy">
</div>
