<style>
    .section4
    {
        padding: 80px 0px 80px 0px;
    }
.sec4-11{
    display: flex;
  	max-width: 1200px;
	width: 100%;
    gap: 50px;
    margin: auto;
 }
.section4 h3 {
    color: #231F20;
    font-size: 44px;
    text-align: center;
    font-family: 'sk-modernist',sans-serif;
    padding-bottom: 50px;
    font-weight: 700;
}
.section5-1 {
    width: 33.33%;
}
  .section5-1 img {
    width: 100%;
    height: auto;
    max-width: 140px;
    margin: auto;
    display: block;
    margin-bottom: 20px;
}
  
  
 .section5-1 h4
 {
     font-size: 22px;
    color: #FF5C35;
    padding-bottom: 5px;
    text-align: center;
    font-weight: 500;
    font-family: 'sk-modernist';
 }
  
 .section5-1 p{
    font-size: 20px;
    color: #231f20;
    text-align: center;
    padding-top: 0px;
    font-weight: 400;
    font-family: 'sk-modernist';
    line-height: 1.3;
}

/* Mobile CSS Start */

@media(max-width:768px)
 {
   .sec4-11{
       display: block;
      
   }
   .section4-2
   {
    padding: 40px;
   }
   .section4-1
   {
    padding: 40px;
   }
   .section4-3
   {
    padding: 40px;
   }
 }
  
  @media(max-width:600px){
  	.section4 {
    padding: 50px 20px 50px 20px;
    }

    .section4 h3 {
        font-size: 24px;
        padding-bottom: 20px;
    }

    .section5-1 {
        width: 100%;
        margin-bottom: 20px;
    }
    .section5-1 h4 {
    font-size: 20px;
    padding-bottom: 0px;
	}
  
  }
  @media(min-width:601px) and (max-width: 768px){
  .section5-1 {
    width: 75.33%;
    margin: 0 auto;
}
  
  }
  
</style>

    <div class="section4">
         <h3>{{section.settings.heading}}</h3>
         
<div class="sec4-11">
	{%  for block in section.blocks %}
  	<div class="section5-1">
        <img width="140" height="140" Loading="lazy" data-src="{{ block.settings.image | image_url: width: 200 }}" alt="{{ block.settings.imageAlt}}" src="{{ block.settings.image | image_url: width: 20 }}" class="lazyload">
        <h4>{{block.settings.headline}}</h4>
        <p>{{block.settings.paragraph}}</p>
    </div>
 {% endfor %}
</div>
</div>

{% schema %}
  {
    "name": "How It Work",
    "settings": [
{
              "type": "text",
              "id": "heading",
              "default": "Lorem",
              "label": "Heading"
            }
	],
	"blocks":[
			{
				"name":"Block",
				"type":"text",
				"settings":[
                    {
                      "type": "text",
                      "id": "headline",
                      "default": "Lorem",
                      "label": "Headline"
                    },
					{
                      "type": "textarea",
                      "id": "paragraph",
                      "default": "Lorem",
                      "label": "paragraph"
                    },
					{
                      "type":"image_picker",
                      "label":"Image",
                      "id":"image"
                    },
					{
                      "type": "text",
                      "id": "imageAlt",
                      "default": "Alt Tag",
                      "label": "Alt Tag"
                    }
				]
			}
		],
    "presets": [
      {
        "name": "Home New How It Work"
      }
    ]
  }
{% endschema %}

