<style>
  .all-elements{
  width:512px;
  }
  .specifically-for-you{
  background: #ebf0f7;
  }
  .right-img{
  	margin-bottom: -50px;
        width: 520px;
  }
  .for-you-upper{
  padding-top:125px;
  }
  
  @media(max-width:768px){
  .all-elements, .right-img{
  width:100%;
  }
    .main-row{
    flex-flow: column-reverse;
    }
    .hide-lessthan-900{
    	display:None;
    }
    .main-row for-you-upper{
    padding-top:50px!important;
    }
    .hide-lessthan-1000 {
    display:none;
    }
    
  }
  

