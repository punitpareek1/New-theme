<section class="specifically-for-you">
	<div class="" style="position: relative;">
	
		<div style="position: absolute; right: 0; top: 0; width: 556px; height: 295px; z-index: 1;" class="hide-lessthan-900">
			<img class="lazyload" data-src="https://cdn2.shopify.com/s/files/1/2204/9357/t/10/assets/home-intro-leaf.jpg" src="https://cdn2.shopify.com/s/files/1/2204/9357/t/10/assets/home-intro-leaf_30x.jpg" alt="Best Custom Probiotics">
		</div>
	
		<div class="global-container-1200 " style="position: relative; z-index: 2;">
		<div class="main-row for-you-upper">
          <div class="right-img"><img class="lazyload" data-src="{{section.settings.image |img_url:'master'}}"  alt="Best Custom Probiotic" src="{{ section.settings.image | img_url: '30x' }}"></div>
          
			<div class="home-intro-content-wrapper">
				
				<div class="home-intro-content all-elements">
					<div class="preheading">{{ section.settings.text}}</div>
					<h1 class="h1-small">{{ section.settings.text2}}</h1>
                  	<div class="text02"> {{ section.settings.paragraph}} </div>					
					
				</div>
				
			</div>
		</div>
      </div>
	</div>
</section>







