<script
  type="application/json"
  data-section-id="{{ section.id }}"
  data-section-type="dynamic-alternating-content">
></script>
<style>
  .home-science{
  	padding: 0;
    background: white;
  }
  .science-contain-1200{
    display: flex;
    width:100%;
  }
  .science-col-2{
     width: 30%;
     box-sizing: border-box;
    float: left;
    padding-top: 0px;
  }
  .science-col-2 img{
  	max-width: 100%;
    display: inline-block;
    vertical-align: top;
    
  }
  .science-col-1{
    width: 70%;
    max-width: 800px;
    box-sizing: border-box;
    padding-top: 75px;
}
  .science-txt-heading span {
        font-size: 2rem;
        font-weight: 500;
        line-height: 1.35;
        color: #48484a;
	}
  
  .pretitle {
        font-weight: 500;
        padding-bottom: 8px;
        font-size: .9rem;
        line-height: 1.4;
        color: #FF5C35;
}
  
  @media(max-width:768px){
    .science-contain-1200{
    	display:block!important;
    }
    .science-col-2{
    width: 100%!important;
    float: none!important;
    }
    .science-col-1{
    width: 100%!important;
    }
    .btn-primary{
    font-size:12px;
    }
  
  }

  
</style>

<div class="home-science" style="position: relative;z-index: 1;">
  <div class="science-contain-1200 global-container-1200">
     
		 <div class="science-col-1" style="position: relative;">
           <div class="pretitle">{{section.settings.toptext}}</div>
           	<h2 class="science-txt-heading headingH2">
                      {{section.settings.heading}}
               </h2>
           <div class="text02">{{section.settings.paragraph}}</div>
           
             <a href="{{section.settings.button_link}}" class="btn-primary">{{section.settings.button_text}}</a>
                <br><br><br>
          </div>

      
          <div class="science-col-2">
              <img class="lazyload" data-src="{{section.settings.image | img_url: 'master'}}" src="{{ section.settings.image | img_url: '30x' }}"
                    alt="{{section.settings.image.title}}">
          </div>
      
    
  </div>
</div>

{% schema %}
{
  "name": "Science Section",
  "settings": [
    {
      "type": "text",
      "id": "toptext",
      "label": "Pretitle"
    },
	{
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
	{
      "type": "richtext",
      "id": "paragraph",
      "label": "Paragraph Text"
    },
    
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
	  "default":"Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
	  
    }
  ],
  "presets": [
    {
      "category": "Advanced content",
      "name": "Science Section",
      "settings": {}
    }
  ]
}

{% endschema %}