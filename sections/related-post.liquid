<style>
 .heading_related {
    font-size: 32px;
    color: #FF5C35;
    text-align: center;
    font-weight: 500;
   padding-bottom: 3rem;
}
.relatedArticles .well-content:hover{
  color:#FFF;
}
.relatedArticles {
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: 1fr;
    max-width: 1200px;
    margin: auto;
    padding-bottom: 60px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-content: center;
    flex-wrap: wrap;
    gap: 30px;
}
.relatedArticles .well-content {
    display: flex;
    flex-direction: column;
}
.slick-track
  {
    width: 1200px;
  }
.well-content {
    color: #ffffff;
    text-decoration: none;
}
.box-padding {
    margin: 0;
}
.post-image {
    border-radius: 20px 20px 0 0;
}
  .slider-wrapper
  {
    padding:10px;
  }
.well {
    background-color:#FF5C35!important;
    border-radius: 20px 20px 20px 20px;
    width: 100%!important;
}
.post_data h3 {
   font-size: 25px;
    font-weight: 500;
}
  .post_data{
    background: unset;
    height: 200px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

.post_data span {
    font-size: 16px;
}
.slick-dots{
  display: none;
}
   @media(max-width:768px){
 .relatedArticles {
    grid-template-columns: 1fr;
    grid-row-gap: 30px;
    padding: 0 20px;
}
.well {
    width: 100%;
}
.slick-dots{
  display: block;
}
  }
 
  
</style>

 <div class="related_articled_wapper">
        <h3 class="heading_related">Related Articles</h3>
        <div class="relatedArticles">
 
            
 {% assign currentHandle = article.handle %}
    {% assign articlesFound = 0 %}
    {% for addin in blogs[blog.handle].articles %}
      {% unless addin.handle == currentHandle %}
          <div class="slider-wrapper"> 
          <div class="well">
                <a href="{{ addin.url }}" class="well-content">
                   <img class="post-image" src="{{  addin.image | img_url: '400x'  | prepend: 'https:' }}" alt="{{ addin.title }}" loading="lazy"/>
                    <div class="post_data">
                    <h3 class="box-padding">{{ addin.title }}</h3>
                          <span>
          <!--  {{ addin.published_at | date: "%a, %b %d, %y" }} -->
                {{ addin.published_at | date: "%A  %b %e, %Y" }}  
               </span>
               </div>
              
               </a>
            </div>
          </div>
         {% assign articlesFound = articlesFound |plus: 1 %}
       {% if articlesFound == 3 %}{% break %}{% endif %}
      {% endunless %}
    {% endfor %}
        </div>
    </div>



<script>
 jQuery('.relatedArticles').slick({
  infinite: true,
  dots:true,
  arrows: true,
  slidesToShow: 3,
  slidesToScroll: 2,
    speed: 300,
  swipeToSlide: true,
  responsive: [{
    breakpoint: 992,
    settings: {
      slidesToShow: 2
    }
  }, {
    breakpoint: 768,
    settings: {
      slidesToShow: 1,
      arrows: false
    }
  }]
});
</script>  
 
