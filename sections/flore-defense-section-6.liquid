<style>
  .flore-defense-section-6{
    background-color:#fff;
    padding:75px 0px;
  }
  
  .sect-6-col-1, .sect-6-col-3 {
  	width:300px;
  }
  
  .sect-6-upper-row {
       max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }
  
  .sect-6-col-2{
  width:600px;
    text-align: center;
  }
  .col-row3 {
  	display:flex;
  }
  .right-text .info-box {
    border-left: 3px solid #FF5C35;
    padding-left: 20px;
    text-align: left;
    margin-top: 60px;
    margin-bottom: 60px;
}
  .left-text .info-box {
    border-right: 3px solid #FF5C35;
    padding-right: 20px;
    text-align: right;
    margin-top: 60px;
    margin-bottom: 60px;
}
 
  .info-box p{
  	padding: 0;
    font-size: .95rem;
    line-height: 1.4;
    color: rgba(0,0,0,.6);
    font-weight: 100;
  }
  
  @media(max-width:800px){
  
    .col-row3{
    	display:block;
    }
    .sect-6-col-2 { width:100%;}
    
    .sect-6-col-1, .sect-6-col-3 {
    width: 100%;
	}
    .left-text .info-box {
    border-left: 3px solid #FF5C35;
      border-right:none;
    padding:0px 0px 0 20px;
    text-align: right;
    margin-top: 60px;
    margin-bottom: 60px;
      text-align:left;
}
  }
  
</style>


<section class="flore-defense-section-6">
  <div class="sect-6-upper-row ">	
  <div class="global-container-1200 upper-section-6">	
        <div><h2>{{ section.settings.heading }}</h2></div>
				<div class="text02">
					{{ section.settings.paragraph }}
				</div>	
		</div> 
	</div>
  
  <div class="global-container-1200">      
    
      

          <div class="col-row3">
		{% for block in section.blocks %}
             {% if block.type == 'block-1' %}
                <div class="sect-6-col-1">							
				{{block.settings.content_1}}
              </div>
            {% endif %}
            
            {% if block.type == 'block-2' %}
                <div class="sect-6-col-2">							
				<img src="{{block.settings.image | img_url: 'master'}}">
              </div>
           {% endif %}
            
           {% if block.type == 'block-3' %}
           
            <div class="sect-6-col-3">							
					{{block.settings.content_3}}
              </div>
            
            {% endif %}
		
		{% endfor %}

          </div> 
    
    
    </div>

</section>



{% schema %}
{
  "name": "Defense Section 6",
  "settings": [
	{
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Red Paragraph Text"
    }
  ],
	"blocks":[
      {
        "type": "block-1",
        "name": "Column 1",
        "settings": [
          {
            "type": "html",
            "id": "content_1",
            "label": "Add Your Html"
          }
        ]
      },
		{
        "type": "block-2",
        "name": "Column 2",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      },
      {
        "type": "block-3",
        "name": "Column 3",
        "settings": [
          {
            "type": "html",
            "id": "content_3",
            "label": "Add Your Html"
          }
        ]
      }
    ],
  "presets": [
    {
      "category": "Advanced content",
      "name": "Defense Section 6",
      "settings": {}
    }
  ]
}

{% endschema %}