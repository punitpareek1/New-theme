<style>

  {% if page.handle == "flore-clinical-blog" %}
    .pxs-announcement-bar{
    display: none;
    }
{% endif %}}


  
  .color_announcement_new_text p{
    color:{{section.settings.color_announcement}} !important;
  }
.color_announcement_new_text strong{
    font-weight: 600;
  }
  .announcement_box{
    display: flex;
    justify-content: center;
    align-items: center;
      gap: 1rem;
  }
  .change_announcement_box{
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }
  .announcement_box img{
width: 70px;
    height: 60px;
  }
  
  .pxs-announcement-bar{
    padding: 0px 15px !important;
  }
  
    @media(max-width: 768px){
.change_announcement_box {
  gap: unset; 
    flex-direction: column;

    }
</style>
<script
  type="application/json"
  data-section-type="pxs-announcement-bar"
  data-section-id="{{ section.id }}"
></script>

{% assign enable_announcement = section.settings.show_announcement %}
{% assign homepage_only = section.settings.announcement_home_only %}
{% assign show_announcement = false %}

{% if enable_announcement and homepage_only == false %}
  {% assign show_announcement = true %}
{% endif %}

{% if enable_announcement and homepage_only and template.name == 'index' %}
  {% assign show_announcement = true %}
{% endif %}

{% if section.settings.announcement_text == blank %}
  {% assign show_announcement = false %}
{% endif %}



{% unless show_announcement %}
  {% break %}
{% endunless %}

<div
  class="pxs-announcement-bar"
  style="
    color: {{ section.settings.announcement_color }};
    background-color: {{ section.settings.announcement_background }}
  "
  {% if section.settings.announcement_link != blank %}
    href="{{ section.settings.announcement_link }}"
  {% endif %}
>
  {% if section.settings.announcement_text_mobile != blank %}
    <span class="pxs-announcement-bar-text-mobile">
      {{ section.settings.announcement_text_mobile | escape }}
    </span>
  {% endif %}
<div class="change_announcement_box">
  {% if section.settings.announcement_text != blank %}
    <span class="pxs-announcement-bar-text-desktop">
      {{ section.settings.announcement_text | escape }}
    </span>
  {% endif %}

  <div class="announcement_box">
    <span class="color_announcement_new_text">{{ section.settings.announcement_new_text }} </span> 
