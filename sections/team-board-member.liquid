<script
  type="application/json"
  data-section-id="{{ section.id }}"
  data-section-type="dynamic-alternating-content">
></script>
<style>
.home-board-team{
      position: relative;
    z-index: 1;
    background-image: url(https://cdn.shopify.com/s/files/1/2204/9357/files/bg.png?v=1663577271);
    background-repeat: no-repeat;
    background-size: 100% 100%;
    background-position: center;
}
  
 h3{
    line-height: 1.25;
        font-size: 1.2rem;
        font-weight: 500;
        color: #404040;
}
  h4{font-weight: 500;margin: 1.33em 0;}
  .board-team-contain-1200{
  	padding-top: 110px;
    padding-bottom: 110px;
  }
  
 
  .board-team-txt-heading{
    font-size: 45px;
    padding-bottom:50px;
    line-height: 1.25;
    color: #000000;
    font-weight: 500;
    text-align: center;
  }

  .employee-tiles-board-team .col-grid-flex{
      display: flex;
    grid-column-gap: 40px;
    grid-row-gap: 20px;
    flex-wrap: wrap;
    justify-content: center;

  }
    .col-3 {
    width: 20% !important;
}
  
    .employee-tiles-board-team .employee-tile {
          border-radius: 100%;
          height: 200px;
          width: 200px;
/*           background-position: center; */
          background-position: 100% 9%;
          background-size: cover;
          background-repeat: no-repeat;
    }

.learn_more{
  cursor: pointer;
  text-decoration: underline;
  color: #FF5C35;
    padding: 0;
}
  .inner_employee{
        display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  
  .employee-tiles-board-team .employee-tile-info {
        display: none;
        line-height: 1.2;
}
  .employee-tiles-board-team h4 {
        margin-bottom: 5px;
        color: #FF5C35;
}
  .clear{
  	clear: both;
  }
   .employee-tiles-board-team .col-3:hover .employee-tile-overlay{
  	display:block;
  } 
  .employee-tile-overlay-inner{
  	top: unset !important; 
 text-align: center !important;
    position:relative;
  }
  .padding-t-10{padding-top:10px;}
/*   .text02{max-width: 900px;} */

  .employee-tiles-board-team {
    max-width: unset !important;
}
  /* Popup css */
  .popup-employee-detail{
  	background: rgb(255, 255, 255); 
    width: 100%; 
    max-width: 600px; 
    z-index: 50; 
    display: none;
    margin-left: -300px;
    margin-top: -200px;
    height: 400px;
    left: 50%;
    top: 50%;
    padding:20px;
    box-shadow: 2px 2px 10px 1px rgb(0 0 0 / 5%);
  }
    .column-fixed-right {
          display: table;
          width: 100%;
      	padding-bottom:10px;
  	}
  .column-fixed-right .column-main {
        display: table-cell;
        box-sizing: border-box;
    vertical-align: top;
	}
    .text-link, a, a:hover {
        color: #FF5C35;
        text-decoration: none;
        cursor: pointer;
	}
  .column-fixed-right .column-right-50 {
        width: 50px;
        display: table-cell;
        vertical-align: top;
    	text-align:right;
	}
  .popup-employee-detail .popup-detail-text {
        height: 210px;
        overflow: auto;
	}
  .text-center, .text-centered {
        text-align: center;
    padding-top:15px;
	}
  .popup-employee-detail h4 {
        margin: 0;
        font-size: 1.4rem;
	}
  .popup-employee-detail .popup-detail-text {
        height: 210px;
        overflow: auto;
}
  .popup{
  	position: fixed;
  }
  .popup-heading{
  font-size: 1.4rem;
    line-height: 1.25;
    color: #404040;
  
  }
  #shopify-section-static-newsletter .module-wrapper{z-index:0}
  
  @media (max-width: 790px){
      .employee-tiles-board-team .col-grid-flex{
       flex-wrap: nowrap;
      }
    .employee-tiles-board-team .col-grid-flex{
    grid-column-gap: 20px;
    }
    .employee-tiles-board-team .col-3 {
              width: 100% !important;
      			height:auto;
      			padding-right:0px;
      }
     .employee-tiles-board-team .employee-tile {
    height: 150px;
    width: 150px;
     }
 .col-3 {
    width: 47% !important;
  }
    .board-team-txt-heading {
    font-size: 30px;
    }
    .popup-employee-detail{
    left: 77%;
    top: 50%;
  }
    .board-team-contain-1200 {
    padding-top: 50px;
    padding-bottom: 50px;
}
    .home-board-team{
       background-size: unset;
    }


        .innerCitys {
  overflow-x: auto;
}


.innerCitys::-webkit-scrollbar{
    display: block;
}



.innerCitys::-webkit-scrollbar:vertical {
  display: none;
} 

    .inner_employee , .employee-tile-overlay-inner{
    width: 200px;
    }
    .col-3{
     width: unset; 
    }
.employee-tiles-board-team .col-grid-flex{
 justify-content: unset;
  }

</style>

<div class="home-board-team">
  <div></div>
  <div class="board-team-contain-1200 global-container-1200">
     
		 <div class="board-team-col" style="position: relative;">
           	<h2 class="board-team-txt-heading" id="board-heading">
                      {{section.settings.heading}}
            </h2>
           
          </div>
    	
    
    	<div class="employee-tiles-board-team">
             <div class="col-grid-flex innerCitys">	
               
                      {% for block in section.blocks %}
									 <div class="col-3">
                                       <div class="inner_employee">
                                              <div class="employee-tile" style="background-image:url('{{block.settings.memberImage | img_url: 'master'}}');" data-target="popup-detail-advisors-{{ forloop.index }}" loading="lazy">							
                                                      <div class="employee-tile-overlay" >
                                                         
                                                      </div>
                                                
                                                  </div>
                                        <div class="employee-tile-overlay-inner">
                                                            <h4>{{block.settings.text1}}</h4>
                                                          	<div style="width: 200px;">{{block.settings.text2}}</div>
                                                            <div class="padding-t-10">
                                                              <p class="learn_more" onclick="display_employee_detail('popup-detail-advisors-{{ forloop.index }}')"></i> Learn More</p>
                                                            </div>
                                                          </div>
                                         </div>
                                                
                                      		
                                      			<div style="position: relative;">
						
                                                    <div id="popup-detail-advisors-{{ forloop.index }}" class="popup atmousepopup-target popup-employee-detail padding-20 shadow-sm-lt">

                                                        <div class="column-fixed-right padding-b-10">

                                                            <div class="column-main">
                                                                <h4 class="popup-heading">{{block.settings.text1}}</h4>
                                                                <h5 class="padding-b-10" style="font-size: .9rem;">{{block.settings.text2}}</h5>
                                                                <a href="{{block.settings.member_linkedin_url}}" target="_blank" rel="noopener"><i class="fa fa-linkedin-square" aria-hidden="true" style="font-size: 22px;"></i></a>					
                                                            </div>

                                                            <div class="column-right-50 text-right"><a href="#board-heading" class="popup-close" data-target="popup-detail-{{ forloop.index }}" onclick="display_employee_detail_hide('popup-detail-advisors-{{ forloop.index }}')">
                                                                <i class="fa fa-times-circle-o" aria-hidden="true" style="font-size: 22px;"></i></a>
                                                            </div>
                                                            <div class="clear"></div>

                                                        </div>

                                                        <div class="popup-detail-text">
                                                            <div class="padding-b-75 text02">
                                                                {{block.settings.member_full_detial}}
                                                            </div>
                                                        </div>

                                                        <div class="popup-footer text-centered padding-t-15">
                                                            <a href="#board-heading" class="popup-close" onclick="display_employee_detail_hide('popup-detail-advisors-{{ forloop.index }}')">Close Window</a>
                                                        </div>
                                                    </div>
			
												</div>
												
                                    </div>
               						
               						

                      {% endfor %}
           						<div class="clear"></div>
                  </div>
		</div>
    
  </div>
  
</div>

{% schema %}
{
  "name": "Board Member Section",
  "settings": [
	{
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
	"blocks":[
	{
	"type":"mission",
	"name":"Board Member",
	"settings": [
		{
          "type": "text",
          "id": "text1",
          "label": "Board Member Name",
		  "default":"Jack Gilbert, Ph.D."
        },
		{
          "type": "text",
          "id": "text2",
          "label": "Board Member Title",
		  "default":"Professor at University of California San Diego"
        },
		{
          "type": "image_picker",
          "id": "memberImage",
          "label": "Board Member Image"
        },
		{
          "type": "url",
          "id": "member_linkedin_url",
          "label": "Board Member Linkedin Url"
        },
		{
          "type": "html",
          "id": "member_full_detial",
          "label": "Board Member Full Detail"
        }


      ]
	}
  ],
  "presets": [
    {
      "category": "Advanced content",
      "name": "Board Member Section",
      "settings": {}
    }
  ]
}

{% endschema %}

<script>
  
  function display_employee_detail(popId){
  	document.getElementById(popId).style.display = "block";
  }
  function display_employee_detail_hide(popId){
  	document.getElementById(popId).style.display = "none";
  }
  
  
</script>
