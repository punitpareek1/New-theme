<style>
  
  .flore-defense-section-3 {
  
    background-color: #fff;
        padding: 50px 0;
    
  }


  .sect-3-col-1{
      background: #fd5c39;
        text-align: right;
    width: 40%;
  }
  .sect-3-col-2{
   width: 60%;
    display:flex;
    justify-content: space-evenly;
  }
  .row-red {
  display:flex;
  }
  .text03 {
  	padding: 40px;
    font-size: 1.4rem;
    line-height: 1.3;
    color: #fff;
    
  } 
      	
  .head04 {
  	font-size: 1.2rem;
    font-weight: 500;
    line-height: 1.25;
        color: #404040;
    text-align:center;
  }
  .img-cols{
  	    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 15%;
    
  }
  @media(max-width:768px){
  
   .img-cols, .sect-3-col-2, .row-red {
    	width: 100%;
      display:block;
      
    text-align: center;
    }
    
    .sect-3-col-1{
    width: 100%!important;
      display:block;
    }
  }
</style>


<section class="flore-defense-section-3">
  <div class="global-container-1200">  
    <div class="row-red">
         
        <div class="sect-3-col-1">							
				<div class="text03">
					{{ section.settings.paragraph }}
				</div>	
		</div> 
      
      <div class="sect-3-col-2">							
		{% for block in section.blocks %}
        		
        <div class="img-cols">
        
          <img src="{{block.settings.left_image | img_url: 'master'}}" alt="{{block.settings.image_alt}}">
          <h4 class="head04">{{block.settings.left_text}}</h4>
          
        </div>
        
        {% endfor %}
		</div> 
      	
    
    </div>

  </div>
</section>



{% schema %}
{
  "name": "Defense Section 3",
  "settings": [
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Red Paragraph Text"
    }
  ],
	"blocks":[
	{
	"type":"order",
	"name":"Columns",
	"settings": [
        {
          "type": "image_picker",
          "id": "left_image",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "image_alt",
          "label": "Image Alt Tag"
        },
		{
          "type": "text",
          "id": "left_text",
          "label": "Heading"

        }	
      ]
	}
  ],
  "presets": [
    {
      "category": "Advanced content",
      "name": "Defense Section 3",
      "settings": {}
    }
  ]
}

{% endschema %}