<style>
.new-template-newsletter {
    background: #ebdbcf;
    padding: 70px 10px;
}

.newsletter-inner {
    max-width: 1000px;
    width: 100%;
    margin: auto;
}

.newsletter-inner h6 {
    font-size: 30px;
    text-align: center;
    font-weight: 700;
    color: #000;
    line-height: 1.3;
    font-family: 'sk-modernist',sans-serif;
}

.newsletter-inner .hbspt-form {}

.newsletter-inner .hbspt-form .hs_email {
    width: 100%;
    max-width: 500px;
    border-radius: 30px !important;
}

.newsletter-inner .hbspt-form input[type=email] {
    border-radius: 30px 0px 0px 30px;
}

.newsletter-inner .hbspt-form form {
    display: flex;
    align-content: center;
    justify-content: center;
    align-items: flex-start;
    margin-top: 40px;
}

.newsletter-inner .hbspt-form form .hs_error_rollup {
    display: none;
}  
  
.newsletter-inner .hbspt-form .hs-form input[type=submit] {
    margin: 0px;
    padding-left: 40px;
    padding-right: 40px;
    background: #FF5C35 !important;
    border-radius: 0px 30px 30px 0px;
}
</style>
{% if section.settings.enable %}
  <div class="new-template-newsletter">
    <div class="newsletter-inner">
      <h6>Microbiome Science is Constantly Evolving.<br>Stay in Touch.</h6>	  
      
		<script charset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/v2.js"></script>
		<script>
		  hbspt.forms.create({
			portalId: "5058629",
			formId: "5fc930a2-0fe6-43df-bd59-9fbb92406f74"
		});
		</script>
      
    </div>
</div>
    
{% endif %}

{% schema %}
{
  "name": "Newsletter",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable",
      "label": "Enable",
      "default": true
    }
  ]
}

{% endschema %}