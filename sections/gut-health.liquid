<style>
  .flore-sec6{background: #404040;}
  .flore-sub{padding-top: 75px;
        padding-bottom: 75px;
  		width: 100%;
        margin: 0 auto;}
  .vcenter_container:last-child {
        margin: 0;
}
  .fixedclass {
        position: fixed;
        bottom: 20px;
        left: 0;
        right: 0;
        width: 38%;
}
  .strip-section p {
        margin: 0;
        font-size: 20px;
        font-weight: 400;
        color: #fff;
        padding: 0;
        line-height: 16px;
}
  .strip-section p span {
        font-size: 25px;
        font-weight: 600;
        color: #fff;
        line-height: 16px;
}
.strip-section {
  z-index: 2;
        background: #ff5c35;
        padding: 14px 15px;
        text-align: center;
        line-height: 13px;
        border: 1px solid #E6451E;
        width: 45%;
        margin: 0 auto;
        height: auto;
        display: flex;
        align-items: center;
        justify-content: center;
}
.vcenter_container {
        display: flex;
        align-items: center;
}
  .pro-btn{
  	text-align: left;
    width: 33.32%;
    box-sizing: border-box;
    float: left;
  }
  h2.font-36{
  	padding-bottom: 50px;
    font-size: 36px;
    line-height: 46px;
    color: #ededee;
    font-weight: 500;
  }
  .flore-sec6 .btn-primary-flore {
        font-size: 20px;
        font-weight: 400;
        background: #ff5c35;
        width: 217px!important;
        padding: 12px 22px;
        display: inline-block;
        text-align: center;
        color: #fff;
        box-shadow: none;
        line-height: 1.55;
        box-shadow: 2px 2px 10px rgb(0 0 0 / 20%);
    
}
.text-link, a, a:hover {
        color: #FF5C35;
        text-decoration: none;
        cursor: pointer;
}
  @media(max-width:768px){
    .pro-btn{width:100%;}
  }
</style>
<div class="flore-sec6">
		<div class="flore-sub global-container-1200">
				<div class="vcenter_container collapse-700">
					<div class="pro-btn">
						<h2 class="font-36">
						{{section.settings.heading}}</h2>
						<a href="{{section.settings.buttonUrl}}" target="_blank" class="btn-primary-flore" rel="noopener noreferrer">{{section.settings.buttonText}}</a>
					</div>
					
					<div class="strip-section fixedclass">
					<p>{{section.settings.promo}}</p>
					</div>
				</div>
		</div>
		<!--Section 6 ends-->
</div>


{% schema %}
  {
    "name": "Gut Health",
    "settings": [
		{
			"type" : "text",
			"id" : "heading",
			"label" : "Heading"
		},
		{
			"type" : "text",
			"id" : "buttonText",
			"label" : "Button Text"
		},
		{
			"type" : "url",
			"id" : "buttonUrl",
			"label" : "Button Url"
		},
		{
			"type" : "text",
			"id" : "promo",
			"label" : "Promo Text"
		}
	],
  "presets": [
    {
      "category": "Advanced content",
      "name": "Gut Health",
      "settings": {}
    }
  ]
  }
{% endschema %}

