<style>
  .header-navigation-list .myBtn:hover{
          color: #aeaeae!important;
        background: inherit;
     
  }
.bg_new_reset{
 background: #efefef;
}
   #reset-{{ section.id }} .module-content{
     background-color:  unset; 
     border: unset;
         max-width: 530px;
   }
  #reset-{{ section.id }} input{
    border-radius: 25px;
  }
 #reset-{{ section.id }} .module-header{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
       padding-bottom: unset;
    padding-top: 50px;
 }
   #reset-{{ section.id }} form{
         grid-template-columns: unset;
   }
  #reset-{{ section.id }} form .cta-container input{
     font-size: 18px !important;
    font-weight: 400 !important;
    text-decoration: none;
    text-transform: uppercase;
    color: #fff !important;
    background-color: #FF5C35 !important;
    border-radius: 40px;
    border: unset !important;
    margin: auto;
  }

@media(max-width: 768px){
     #reset-{{ section.id }} .module-content{
   padding: unset;
   }

     #reset-{{ section.id }} .module-header{
    padding-top: unset;
 }
}
  
</style>



<div class="module-wrapper bg_new_reset" id="reset-{{ section.id }}">
  <div class="module module-reset-password">
    <div class="module-header">
      <h1 class="module-title page-title">{{ 'customer.reset_password.header' | t }}</h1>
    </div>
    <div class="module-body">
      <div class="module-content">
        <div class="reset-password">
          {% form 'reset_customer_password' %}

            <p>{{ 'customer.reset_password.new_password_for' | t: email: customer.email }}</p>

            {% if form.errors %}
            <p class="error-message">{{ 'customer.reset_password.error' | t }}</p>
            {% endif %}

            <div class="input-wrapper">
              <label for="customer[password]">{{ 'general.general.password' | t }}</label>
              <input type="password" value="" name="customer[password]" id="customer[password]">
            </div>

            <div class="input-wrapper">
              <label for="customer[password_confirmation]">{{ 'customer.general.password_confirmation' | t }}</label>
              <input type="password" value="" name="customer[password_confirmation]" id="customer[password_confirmation]">
            </div>

            <div class="input-wrapper cta-container">
              <input class="button" type="submit" value="{{ 'customer.reset_password.submit' | t }}">
            </div>

          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>


