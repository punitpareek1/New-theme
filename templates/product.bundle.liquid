  .product-slideshow-pagination-item.active {
        opacity: 1;
}
  .product-big-image img {
        display: block;
        margin: 0 auto;
        max-width: 100%;
}
  .product-slideshow {
        position: relative;
        padding-right: 20px;
}
.product-slideshow, .product-wrap {
        display: inline-block;
        vertical-align: top;
        width: 50%;
        font-size: 16px;
}
  .padding-b-25 {
        padding-bottom: 25px;
}

.product-thumbnails {
        margin-top: 30px;
        text-align: center;
        font-size: 0;
}
  .product-slideshow-previous {
        left: 0;
}
  .product-slideshow-next {
        right: 0;
}
  .product-wrap {
    text-align: left;
    padding-left: 30px;
}
  .number-input-wrapper {
    -webkit-border-radius: 5px;
    -khtml-border-radius: 5px;
    -moz-border-radius: 5px;
    -ms-border-radius: 5px;
    -o-border-radius: 5px;
    border-radius: 5px;
    position: relative;
    display: inline-block;
    border: 1px solid #e6e6e6;
    overflow: hidden;
}
  
  @media screen and (max-width: 720px){	
    
   .product-slideshow {
    max-width: 600px;
    padding-right: 0;
    margin-top: 30px;
    margin-right: auto;
    margin-left: auto;
	}
    .product-slideshow, .product-wrap {
    display: block;
    width: 100%;
    padding: 0;
	}
    .number-input-field {
    text-align: center;
    width: 100%;
}
    
    .product-options, .product-quantity {
    width: 65%;
    
  } 
    .number-input-nav-item {
    position: absolute;
    height: 53px;
    width: 53px;
    line-height: 53px;
}
    
    .number-input-nav-item:first-child {
    right: 0;
    border-left: 1px solid #e6e6e6;
    border-bottom: none;
}
    .product-form-nav {
	float:none!important;
    }
    .add-to-cart {
    text-align:left!important;
      margin:0px!important;
    }
    .number-input-nav-item {
    position: absolute;
    height: 53px;
    width: 53px;
    line-height: 53px;
	}	
    .number-input-nav-item:last-child {
    left: 0;
    border-right: 1px solid #e6e6e6;
}
  }
  
